root = true

# All files
[*]
indent_size = 4
indent_style = space
tab_width = 4

# Code files
[*.{cs,csx,json}]
indent_size = 4
end_of_line = crlf
insert_final_newline = true
charset = utf-8-bom

[*.csproj]
indent_size = 2

#### .NET Coding Conventions ####
[*.cs]
# Organize usings
dotnet_separate_import_directive_groups = false
dotnet_sort_system_directives_first = true

#### Warning and error overrides ####

# IDE0305: Let me use .ToArray() etc.
dotnet_diagnostic.IDE0305.severity = none

# CA1861: Let me use array literals
dotnet_diagnostic.CA1861.severity = none

# SYSLIB1045: Let me use Regex.Match
dotnet_diagnostic.SYSLIB1045.severity = none

# CS9236: Let me use lambdas inside lambdas
dotnet_diagnostic.CS9236.severity = none

